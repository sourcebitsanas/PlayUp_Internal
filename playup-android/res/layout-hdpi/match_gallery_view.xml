<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dip"
        android:src="@drawable/red_ticket_divider"/>

    <RelativeLayout
        android:layout_width="160dip"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/ticketBcode"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ticket_bcode"
            android:visibility="gone"
            android:layout_marginLeft="8dip"/>
        
        <TextView
            android:id="@+id/status"
            style="@style/galleryTeamName"
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="3dip"
            android:text="" />
        
        
        <RelativeLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_below="@id/status"
        	android:layout_marginLeft="8dip"
        	android:id = "@+id/scoresHolder"
            >          
            
            <LinearLayout
                android:id="@+id/scoresView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:visibility="visible">
                 <TextView
                    android:id="@+id/team1Score"
                    style="@style/SearchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="right"
                    android:gravity="right" 
                    android:text=""/>

                <TextView
                    android:id="@+id/team2Score"
                    style="@style/SearchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:singleLine="true" 
                    android:text=""/>
            
            </LinearLayout>
            
             <LinearLayout
                android:id="@+id/setScoresView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_alignParentRight="true"
                 android:orientation="horizontal"
                 android:visibility="gone"/>
            
            
            <LinearLayout 
                android:id="@+id/teamView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dip"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/scoresHolder"
                >

                 <TextView
                     android:id="@+id/team1Name"
                     style="@style/galleryTeamName"
                      android:layout_width="80dp"
                     android:layout_height="wrap_content"
                     android:singleLine="true" 
                     android:ellipsize="end"
                     android:text=""/>

                 <TextView
                     android:id="@+id/team2Name"
                     style="@style/galleryTeamName"
                    
                     android:layout_height="wrap_content"
                     android:singleLine="true" 
                     android:ellipsize="end"
                     android:layout_width="80dp"
                     android:text="" />
                
            </LinearLayout>
            
        </RelativeLayout>
    </RelativeLayout>

   <ImageView
        android:id="@+id/rightDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dip"
        android:src="@drawable/red_ticket_divider"/>

</LinearLayout>