<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="4dip"
    android:paddingRight="4dip"
    android:orientation="vertical"
   >
  
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/match_base_image" >
   <RelativeLayout 
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dip"
       android:layout_marginBottom="2dip"
       android:layout_gravity="center_vertical">
       
       <ImageView android:id="@+id/firstLeagueIcon" 
           android:layout_width="53px"
           android:layout_height="35px"
           android:layout_margin="5dip" />
       
       <TextView android:id="@+id/firstLeagueName"
           style="@style/userTextMessage_parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/firstLeagueIcon"
           android:layout_centerVertical="true"
           android:text=""/>
       
       <TextView android:id="@+id/firstLeagueNumber"
            style="@style/userTextMessage_parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:paddingRight="10dip"
            android:layout_centerVertical="true"
           android:text=""/>
       
   </RelativeLayout>
   
    <RelativeLayout android:id="@+id/secondRowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_gravity="center_vertical">
       
       <ImageView android:id="@+id/secondLeagueIcon" 
           android:layout_width="53px"
           android:layout_height="35px"
           android:layout_margin="5dip" />
       
       <TextView android:id="@+id/secondLeagueName"
            style="@style/userTextMessage_parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/secondLeagueIcon"
           android:layout_centerVertical="true"
           android:text=""/>
       
       <TextView android:id="@+id/secondLeagueNumber"
             style="@style/userTextMessage_parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:paddingRight="10dip"
            android:layout_centerVertical="true"
           android:text=""/>
       
   </RelativeLayout>
</LinearLayout>
   
        <RelativeLayout
             android:id="@+id/layoutBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="3dip"
            android:background="@drawable/live_match_base"
           >
       
	       <TextView android:id="@+id/liveBaseTime"
	           style="@style/userName_parent"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="10dip"
	           android:layout_centerVertical="true"
	           android:gravity="center_vertical"
	           android:paddingTop="4dip"
	           android:paddingBottom="4dip"/>
	       
	         <TextView
	                android:id="@+id/liveImage"
	                style="@style/live"
	                android:visibility="invisible"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/live_icon"
	                android:gravity="center"
	                     android:paddingLeft="4dp"
                android:paddingRight="4dp"
	                 android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:text="@string/live"/>
        
         
</RelativeLayout>

</LinearLayout>