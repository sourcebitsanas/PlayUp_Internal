<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
    
    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:padding="10dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/radioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:layout_toLeftOf="@+id/speaker"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingTop="10dp"
        android:gravity="center_vertical" 
        android:text="Large Textddddddddddddddddddddddddddddd"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/radioSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioTitle"
        android:text="adfsdf"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center_vertical" 
        android:layout_toRightOf="@+id/logo"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	

   

        <ImageView
            android:id="@+id/speaker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/speakerlow"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"/>
   

</RelativeLayout>