<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_others"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/social_sports_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="4dip"
        android:layout_weight="1"
        android:background="@drawable/all_sport_tag"
        android:visibility="gone">
    </LinearLayout>
    
     <RelativeLayout
        android:id="@+id/item_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dip"
        android:layout_weight="1"
        android:background="@drawable/create_room_base"
        android:visibility="gone" >

        <TextView
            android:id="@+id/hangoutText"
            style="@style/SearchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:maxWidth="100dip"
            android:paddingBottom="2dip"
            android:text="@string/hangoutText" />

        <ImageView
            android:id="@+id/hangoutPlusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dip"
            android:src="@drawable/plus_icon" />
    </RelativeLayout>
   
    

    <LinearLayout
        android:id="@+id/item_others_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="4dip"
        android:layout_weight="1"
        android:background="@drawable/sport_base"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/itemTitle"
                style="@style/mySportsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:lineSpacingExtra="-2dip"
                android:maxLength="30"
                android:maxLines="3"
                android:minHeight="40dip" />

            <TextView
                android:id="@+id/commentingNumber"
                style="@style/listUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/itemTitle"
                android:layout_marginRight="8dip"
                android:background="@drawable/comments_bubble"
                android:gravity="center_horizontal"
                android:paddingBottom="3dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:paddingTop="2dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="-5dip" >

            <TextView
                android:id="@+id/uName"
                style="@style/matchRoomUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/commentTime"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/comment_desc"
                style="@style/matchItemComment"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_below="@id/uName"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:maxLines="2" />

            <!--
             <LinearLayout 
                android:id="@+id/comment_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uName"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip" > 
                </LinearLayout>
            -->

            <TextView
                android:id="@+id/commentTime"
                style="@style/listUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/uName"
                android:layout_alignBottom="@+id/uName"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdPartyTile1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="4dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/tiles1"
            layout="@layout/thirdpary_tile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_others_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dip"
        android:layout_weight="1"
        android:background="@drawable/sport_base"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/itemTitle"
                style="@style/mySportsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:lineSpacingExtra="-2dip"
                android:maxLength="30"
                android:maxLines="3"
                android:minHeight="40dip" />

            <TextView
                android:id="@+id/commentingNumber"
                style="@style/listUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/itemTitle"
                android:layout_marginRight="8dip"
                android:background="@drawable/comments_bubble"
                android:gravity="center_horizontal"
                android:paddingBottom="3dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:paddingTop="2dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="-5dip" >

            <TextView
                android:id="@+id/uName"
                style="@style/matchRoomUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@+id/commentTime"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/comment_desc"
                style="@style/matchItemComment"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_below="@id/uName"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:maxLines="2" />

            <!--
             <LinearLayout 
                android:id="@+id/comment_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uName"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"> 
                </LinearLayout>
            -->

            <TextView
                android:id="@+id/commentTime"
                style="@style/listUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/uName"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdPartyTile2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/tiles2"
            layout="@layout/thirdpary_tile" />
    </LinearLayout>

   

    
     <LinearLayout
        android:id="@+id/social_sports_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dip"
        android:layout_weight="1"
        android:background="@drawable/all_sport_tag"
       android:visibility="gone" >
    </LinearLayout>
</LinearLayout>